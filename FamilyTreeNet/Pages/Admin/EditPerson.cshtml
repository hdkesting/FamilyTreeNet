@page "{id}"
@model FamilyTreeNet.Pages.Admin.EditPersonModel
@{
    ViewData["Title"] = "Edit Person";
    Layout = "_AdminLayout";
}

<h1>Edit page for <span class="name">@Model.Person.FullName</span> </h1>
<form method="post" asp-page="EditPerson">
    <input type="hidden" name="primary" value="@Model.Primary">

    <div class="form-group">
        <label for="firstname">First name(s)</label>
        <input type="text" id="firstname" name="@nameof(Model.Person.Firstnames)" class="form-control"
               placeholder="Enter first name(s)" minlength="2" required 
               value="@Model.Person.Firstnames"/>
    </div>
    <div class="form-group">
        <label for="lastname">Last name</label>
        <input type="text" id="lastname" name="@nameof(Model.Person.Lastname)" class="form-control"
               placeholder="Enter last name" minlength="2" required
               value="@Model.Person.Lastname"/>
    </div>

    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="@nameof(Model.Person.SexChar)" id="sexm" value="M" checked="@Model.Person.IsMale">
        <label class="form-check-label" for="sexm">👨 Male</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="@nameof(Model.Person.SexChar)" id="sexf" value="F" checked="@Model.Person.IsFemale">
        <label class="form-check-label" for="sexf">👩 Female</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="@nameof(Model.Person.SexChar)" id="sexu" value="-" checked="@(Model.Person.Sex == Core.Support.Sex.Unknown)">
        <label class="form-check-label" for="sexu">Unknown</label>
    </div>

    <div class="form-group">
        <label for="birthdate">Birth date</label>
        <input type="date" id="birthdate" name="@nameof(Model.Person.BirthDateDate)" class="form-control"
               placeholder="Birth date"
               value="@Model.Person.BirthDateDate">
    </div>
    <div class="form-group">
        <label for="birthplace">Birth place</label>
        <input type="text" id="birthplace" name="@nameof(Model.Person.BirthPlace)" class="form-control"
               placeholder="Birth place"
               value="@Model.Person.BirthPlace">
    </div>

    <div class="form-group">
        <label for="deathdate">Date of death</label>
        <input type="date" id="deathdate" name="@nameof(Model.Person.DeathDateDate)" class="form-control"
               placeholder="Death date"
               value="@Model.Person.DeathDateDate">
    </div>
    <div class="form-group">
        <label for="deathplace">Place of death</label>
        <input type="text" id="deathplace" name="@nameof(Model.Person.DeathPlace)" class="form-control"
               placeholder="Death place"
               value="@Model.Person.DeathPlace">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="button" class="btn btn-secondary" onclick="history.back(-1)">Cancel</button>
</form>


@page "{id}"
@model FamilyTreeNet.Pages.Admin.EditPersonModel
@{
    ViewData["Title"] = "Edit Person";
    Layout = "_AdminLayout";
}

<h1>Edit page for <span class="name">@Model.Person.FullName</span> </h1>
<form method="post" asp-page="EditPerson">
    <input type="hidden" name="primary" value="@Model.Primary" />
    <input type="hidden" asp-for="@Model.Person.Id" />

    <div class="form-group">
        <label for="firstname">First name(s)</label>
        <input type="text" id="firstname" asp-for="@Model.Person.Firstnames" class="form-control"
               placeholder="Enter first name(s)" minlength="2" required />
    </div>
    <div class="form-group">
        <label for="lastname">Last name</label>
        <input type="text" id="lastname" asp-for="@Model.Person.Lastname" class="form-control"
               placeholder="Enter last name" minlength="2" required />
    </div>

    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" asp-for="@Model.Person.SexChar" id="sexm" value="M" />
        <label class="form-check-label" for="sexm">👨 Male</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" asp-for="@Model.Person.SexChar" id="sexf" value="F" />
        <label class="form-check-label" for="sexf">👩 Female</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" asp-for="@Model.Person.SexChar" id="sexu" value="?" />
        <label class="form-check-label" for="sexu">Unknown</label>
    </div>

    <div class="form-group">
        <label for="birthdate">Birth date</label>
        <input type="date" id="birthdate" asp-for="@Model.Person.BirthDateDate" class="form-control"
               placeholder="Birth date" />
    </div>
    <div class="form-group">
        <label for="birthplace">Birth place</label>
        <input type="text" id="birthplace" asp-for="@Model.Person.BirthPlace" class="form-control"
               placeholder="Birth place" />
    </div>

    <div class="form-group">
        <label for="deathdate">Date of death</label>
        <input type="date" id="deathdate" asp-for="@Model.Person.DeathDateDate" class="form-control"
               placeholder="Death date" />
    </div>
    <div class="form-group">
        <label for="deathplace">Place of death</label>
        <input type="text" id="deathplace" asp-for="@Model.Person.DeathPlace" class="form-control"
               placeholder="Death place" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="button" class="btn btn-secondary" onclick="history.back(-1)">Cancel</button>
</form>


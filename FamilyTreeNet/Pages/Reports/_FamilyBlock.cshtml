@model FamilyTreeNet.ViewModels.FamilyVm

@if (Model != null)
{
<div class="marriage">
    <p style="font-size: x-large">&times;</p>
    @if (Model.MarriageDate != null || !string.IsNullOrEmpty(Model.MarriagePlace))
    {
    <p><span title="Married">⚭</span> <span>@Model.MarriageDateFmt</span> <span>@Model.MarriagePlace</span></p>
    }
    @if (Model.DivorceDate != null || !string.IsNullOrEmpty(Model.DivorcePlace))
    {
    <p><span title="Divorced">⚮</span> <span>@Model.DivorceDateFmt</span> <span>@Model.DivorcePlace</span></p>
    }
</div>
}
